<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lemon.oauth.mapper.CmsUserGroupMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lemon.oauth.pojo.cms.UserGroupDO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="group_id" property="groupId"/>
    </resultMap>

    <insert id="insertBatch">
        INSERT INTO lemon_user_group(user_id, group_id)
        VALUES
        <foreach collection="relations" item="relation" separator=",">
            (#{relation.userId}, #{relation.groupId})
        </foreach>
    </insert>

    <delete id="deleteByUserId">
        DELETE FROM lemon_user_group
        WHERE user_id = #{user_id}
    </delete>
</mapper>